extend layout

mixin card(name, date, description)
  .card
    ul.collection
      li.collection-item.avatar
        img.circle(src="/images/debbie.png")
        h5= name
        p= 'Posted on ' + date
    .card-content
        p=  description
    .row
      .input-field.center-align.col.s11
        i.material-icons.prefix account_circle
        input#icon-prefix(type='text')
        label(for='icon_prefix') Write your comment here
    .card-action.right-align
      a.href('#') post

mixin medication(name, description, directions, expiration, doctor)
  li.collection-item
    h5= name
    p= description
    p= directions
    p= expiration
    p= doctor

block content
  .row 
    .col.s3
      ul.collection
        li.collection-item.avatar
          img.circle(src="images/debbie.png")
          span.title Debbie Leone
          p Caregiver
          p 7 years
      ul.collection.with-header
        li.collection-header
          h6 Family Members
        li.collection-item Sheldon Dawkins
        li.collection-item Michelle Foster
        li.collection-item Samuel Dawkins
        li.collection-item Shelby Dawkins
      ul.collection
          a.collection-item.modal-trigger(href='#modal1') Medications
                #modal1.modal.modal-fixed-footer
                  .modal-content
                    h5 Medications
                    p medications here.
                    each medication in medications
                      +medication(medication.name, medication.description, medication.directions, medication.expiration, medication.doctor)
                    a.modal-close.waves-effect.waves-red.btn-flat(href='#!') Close           
          a.collection-item.modal-trigger(href='#notesModal') Notes
                #notesModal.modal.modal-fixed-footer
                  .modal-content
                    p notes
                    each note in notes
                      p= note
                    
                    a.modal-close.waves-effect.waves-red.btn-flat(href='#!') Close  
          a.collection-item(href='#!') Find Resources
          a.collection-item(href='#!') Find Support
      ul.collection.with-header.events
        li.collection-header
          h6 Daily Events
        each event in events
            li.collection-item=  event.description
  
    .col.s9
      .card
        .card-tabs
          ul.tabs.tabs-fixed-width
            li.tab
              a.active(href='#text') Text
            li.tab
              a(href='#photo') Photo
            li.tab
              a(href='#video') Video
        .card-content.grey.lighten-4
          #text 
            .row
              .input-field.col.s12
              input(placeholder='Write you post here', type='text')
              a.right.waves-effect.waves-light.btn post
          #photo
            .row
              a.file-field.input-field
                .btn
                  span Browse
                  input(type='file')
                .file-path-wrapper
                  input.file-path.validate(type='text' placeholder='Upload Photo')
              .input-field.col.s12
              input(placeholder='Write you post here', type='text')
              a.right.waves-effect.waves-light.btn post
          #video
              a.file-field.input-field
                .btn
                  span Browse
                  input(type='file')
                .file-path-wrapper
                  input.file-path.validate(type='text' placeholder='Upload Video')
              .input-field.col.s12
              input(placeholder='Write you post here', type='text')
              a.right.waves-effect.waves-light.btn post
      each post in posts
         +card(post.name, post.createdAt, post.message)
      .card
        ul.collection
          li.collection-item.avatar
            img.circle(src="images/debbie.png")
            span.title Debbie Leone
            p posted Yesterday
        .card-image
          img(src="images/care_post.jpg")
        .card-content
          p Today, Deborah had a CT scan to check up on her leukemia.  She's currently in remission.
          p Go Deborah!
        ul.collection
          li.collection-item.avatar
            img.circle(src="images/sheldon.png")
            span.title Sheldon Dawkins
            p Nice to see her doing well!
          li.collection-item.avatar
            img.circle(src="images/shelby.png")
            span.title Shelby Dawkins
            p Big Same!
        .row
          .input-field.center-align.col.s11
            i.material-icons.prefix account_circle
            input#icon-prefix(type='text')
            label(for='icon_prefix') Write your comment here
        .card-action.right-align
         a.href('#') post
        

            



