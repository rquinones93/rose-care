extend layout

block content
  .row 
    .col.s3
      ul.collection
        li.collection-item.avatar
          span.title Debbie Dawkins
          p Caregiver
          p 7 years
      ul.collection.with-header
        li.collection-header
          h6 Family Members
        li.collection-item Family Member 1
        li.collection-item Family Member 2
        li.collection-item Family Member 3
        li.collection-item Family Member 4
      ul.collection
          a.collection-item.modal-trigger(href='#modal1') Medications
                #modal1.modal.modal-fixed-footer
                  .modal-content
                    each medication in medications
                      if medication
                        h5 =  medication.name
                        p =  medication.description
                        p = medication.directions
                        p = medication.expiration
                        p = medication.doctor
                        br
                      else
                        p no medications
                    a.modal-close.waves-effect.waves-red.btn-flat(href='#!') Close           
          a.collection-item.modal-trigger(href='#notesModal') Notes
                #notesModal.modal.modal-fixed-footer
                  .modal-content
                    h4 Notes
                    p A bunch of text
                    a.modal-close.waves-effect.waves-red.btn-flat(href='#!') Close  
          a.collection-item(href='#!') Find Resources
          a.collection-item(href='#!') Find Support
      ul.collection.with-header.events
        li.collection-header
          h6 Daily Events
        each event in events
          p.collection-item = event.description
          //- p = event.date_of_event
        else
          p.collection-item No Events Today
        
      #eventModal.modal.modal-fixed-footer
        .modal-content
          h4 Events
          p A bunch of text
          a.modal-close.waves-effect.waves-red.btn-flat(href='#!') Close      
    .col.s9
      .card
        .card-tabs
          ul.tabs.tabs-fixed-width
            li.tab
              a.active(href='#text') Text
            li.tab
              a(href='#photo') Photo
            li.tab
              a(href='#video') Video
        .card-content.grey.lighten-4
          #text 
            .row
              .input-field.col.s12
              input(placeholder='Write you post here', type='text')
              a.right.waves-effect.waves-light.btn post
          #photo
            .row
              a.file-field.input-field
                .btn
                  span Browse
                  input(type='file')
                .file-path-wrapper
                  input.file-path.validate(type='text' placeholder='Upload Photo')
              .input-field.col.s12
              input(placeholder='Write you post here', type='text')
              a.right.waves-effect.waves-light.btn post
          #video
              a.file-field.input-field
                .btn
                  span Browse
                  input(type='file')
                .file-path-wrapper
                  input.file-path.validate(type='text' placeholder='Upload Video')
              .input-field.col.s12
              input(placeholder='Write you post here', type='text')
              a.right.waves-effect.waves-light.btn post

      .card
        ul.collection
          li.collection-item.avatar
            i.material-icons.circle person
            span.title Deborah Dawkins
            p posted Yesterday
        .card-image
          img(src="images/care_post.jpg")
        .card-content
          p Today, Deborah had a CT scan to check up on her leukemia.  She's currently in remission.
          p Go Deborah!
        ul.collection
          li.collection-item.avatar
            i.material-icons.circle account_circle
            span.title Family Member
            p Nice to see her doing well!
          li.collection-item.avatar
            i.material-icons.circle account_circle
            span.title Family Member 2
            p Big Same!
        .row
          .input-field.center-align.col.s11
            i.material-icons.prefix account_circle
            input#icon-prefix(type='text')
            label(for='icon_prefix') Write your comment here
        .card-action.right-align
         a.href('#') post
        

            



